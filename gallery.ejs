<% 
const postsByYear = items.reverse().reduce((acc, item) => {
    const date = new Date(item.date);
    const year = `${date.getFullYear()}`; // Group by year
    acc[year] = acc[year] || [];
    acc[year].push(item);
    return acc;
}, {});
%>


<% Object.keys(postsByYear).sort((a, b) => b.localeCompare(a)).forEach(year => { %>
  <h2><%= year %></h2>
  <ul>
    <% postsByYear[year].forEach(item => { %>
      <li><a href="<%- item.path %>"><%= item.title %></a></li>
    <% }) %>
  </ul>
<% }) %>
