<% 
const postsByYearMonth = items.reduce((acc, item) => {
  const date = new Date(item.date);
  const yearMonth = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`; // Format as "YYYY-MM"
  acc[yearMonth] = acc[yearMonth] || [];
  acc[yearMonth].push(item);
  return acc;
}, {});
%>

<% Object.keys(postsByYearMonth).sort((a, b) => b.localeCompare(a)).forEach(yearMonth => { %>
  <h2><%= yearMonth %></h2>
  <ul>
    <% postsByYearMonth[yearMonth].forEach(item => { %>
      <li><a href="<%- item.path %>"><%= item.title %></a></li>
    <% }) %>
  </ul>
<% }) %>
